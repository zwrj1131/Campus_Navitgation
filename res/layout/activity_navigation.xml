
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity" >
   

       <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bSearch"
        class="com.google.android.gms.maps.SupportMapFragment" />
              
        <ImageButton
            android:id="@+id/bNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/navigate_button" />
        
         <EditText
              android:id="@+id/et_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bSearch"
            android:layout_marginLeft="41dp"
            android:layout_toRightOf="@+id/bSearch"
            android:ems="10"
            android:hint="@string/hnt_et_location"
            android:inputType="text"   />

        <ImageButton
            android:id="@+id/bSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bNavigation"
            android:layout_alignParentLeft="true"
            android:src="@drawable/search_button" />

     
       
          <requestFocus />
</RelativeLayout>
